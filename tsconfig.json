{
    "compilerOptions": {
        "baseUrl": ".",
        "noEmit": true,
        "skipLibCheck": true,
        "allowJs": true,
        "jsx": "react",
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "esnext",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "types": ["vitest/globals", "@testing-library/jest-dom"],
        "paths": {
            "@dhis2/analytics": ["src/types/analytics/index.d.ts"],
            // Use this as the defnitive source for type imports, mainly to prevent
            // a suggestion overload from all the generated types
            "@types": ["src/types/index"]
        }
    },
    "include": [
        "src",
        "*.d.ts",
        "*.cjs",
        ".*.cjs",
        "vitest.*.ts",
        ".eslintrc.js"
    ]
}
