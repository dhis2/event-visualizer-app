{
    "name": "event-visualizer-app",
    "version": "0.0.1",
    "description": "Event visualizer app and plugin",
    "license": "BSD-3-Clause",
    "private": true,
    "scripts": {
        "build": "d2-app-scripts build",
        "start": "d2-app-scripts start",
        "test": "vitest run",
        "test:watch": "vitest",
        "deploy": "d2-app-scripts deploy",
        "lint": "./scripts/lint.sh",
        "format": "./scripts/format.sh",
        "generate-types": "./scripts/generate-types.sh",
        "cy:open": "start-server-and-test 'yarn start' http://localhost:3000 'yarn cypress open --e2e'",
        "cy:run": "start-server-and-test 'yarn start' http://localhost:3000 'yarn cypress run --browser chrome headless'",
        "cy:comp:open": "cypress open --component",
        "cy:comp:run": "cypress run --component --browser chrome headless",
        "postinstall": "./scripts/postinstall.sh"
    },
    "devDependencies": {
        "@cypress/vite-dev-server": "^7.0.0",
        "@dhis2/cli-app-scripts": "^12.8.0",
        "@dhis2/cli-style": "^10.7.8",
        "@dhis2/cypress-commands": "^10.1.0",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/jest": "^30.0.0",
        "@types/prop-types": "^15",
        "@types/react": "^18.3.23",
        "@types/react-dom": "^18.3.7",
        "@vitejs/plugin-react": "^5.1.0",
        "cypress": "^15.5.0",
        "cypress-real-events": "^1.15.0",
        "cypress-tags": "^1.2.2",
        "eslint-import-resolver-typescript": "^4.4.4",
        "jsdom": "^26.1.0",
        "lint-staged": "^16.2.6",
        "openapi-typescript": "^7.10.1",
        "resize-observer-polyfill": "^1.5.1",
        "start-server-and-test": "^2.1.2",
        "typescript": "^5",
        "typescript-plugin-css-modules": "^5.2.0",
        "vitest": "^3.1.4",
        "vitest-canvas-mock": "^0.3.3"
    },
    "dependencies": {
        "@dhis2/analytics": "^29.0.3",
        "@dhis2/app-runtime": "^3.14.5",
        "@dhis2/ui": "^10.9.1",
        "@reduxjs/toolkit": "^2.9.2",
        "@types/deep-equal": "^1.0.4",
        "deep-equal": "^2.2.3",
        "deepmerge": "^4.3.1",
        "history": "^5.3.0",
        "prop-types": "^15.8.1",
        "query-string": "^9.3.1",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "react-redux": "^9.2.0",
        "usehooks-ts": "^3.1.1"
    },
    "resolutions": {
        "@dhis2/app-runtime": "^3.14.4"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": [
            "eslint",
            "prettier --check"
        ],
        "*.{css,scss,tsx}": [
            "stylelint --max-warnings=0"
        ],
        "*.{css,scss,json,md,MD,yml,YML,yaml,YAML}": [
            "prettier --check"
        ]
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
